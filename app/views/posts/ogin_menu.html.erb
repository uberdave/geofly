<div data-role="header" data-id="persistheader" data-position="fixed"> 
	<h1>geofly.me</h1> 

<style>
	
	</style>
</div> 


<% @posts.each do |post| %>
<% @bearing = 360.to_s %>


<ul data-role="listview" data-inset="true" >

   
    <% if post.ext_link %>
    <li data-theme= 'f' data-icon="action">
        <a href="<%= post.ext_link %>">
        <%= post.title %> 
        <img src="<%= post.image %>" class="ui-li-has-thumb" class="ui-shadow"/></a>
    <% else %>
    <li data-theme= 'f'>
        <a href="http://geofly.me/posts/<%= post.id %>/">
        <%= post.title %> 
        <img src="<%= post.image %>" class="ui-li-has-thumb" class="ui-shadow"/></a>
    <% end %>
</li>
</ul>
<ul data-role="listview"  data-divider-theme = 'd'>

    <li data-role="list-divider">


<a href='https://www.google.com/#q=<%= post.lat %>%2C<%= post.lng %>' id='moreOptions' data-role='button' rel="external" data-icon='info' data-inline="true" data-mini="true" data-iconpos='notext'>more</a>
<%= post.distance.round(2) %>&nbspkm (<%= post.bearing %>&deg; )
</li>
</ul>
<% end %>
<ul data-role="listview" data-inset="true">

    <li data-theme= 'f''>
    <a href="http://organicsoftwork.com/dave.html">
    
    <img src="<%= @dave.image %>" class="ui-li-has-thumb" relclass="ui-shadow" rel="external"/></a>
   
</li>
</ul>
<ul data-role="listview"  data-divider-theme = 'd'>

    <li data-role="list-divider">



</li>
</ul>
<div data-role="footer" data-id="persistfooter" data-position="fixed" >
<div data-role="navbar"> 
<ul>
<li><a href="/posts/new" data-role="button" data-icon="plus" data-iconpos="right" data-theme="a"  rel="external">Paste a Place!</a>
<li><a href="/" data-role="button" data-icon="home"data-iconpos="right" data-theme="a" rel="external">Home</a>
</ul>
